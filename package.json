{
  "name": "@claude-code-actions/monorepo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.2.15",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:app": "turbo run dev --filter=@claude-code-actions/app",
    "dev:web": "turbo run dev --filter=@claude-code-actions/web",
    "dev:mcp": "turbo run dev --filter=@claude-code-actions/mcp",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "typescript": "^5.9.3"
  }
}
